#!/usr/bin/env ruby

require './config/environment'

def sync(name)
  opts = {
    name: name               ,
    type: "Repo::GitHub"         
  }

  repo = Repo.find_or_create_by(opts)
  repo.sync
end

%w(mvscorg/bugmark elixir-lang/gen_stage elixir-lang/flow elixir-lang/gettext rust-lang/regex).each do |name|
  puts "Loading #{name}"
  sync(name)
end

