#!/usr/bin/env ruby

require "./config/environment"

opts = [
  {
    type:   "Contract::Forecast"   ,
    bug_id: Bug.first.id           ,
    currency_type:   "Ether"       ,
    currency_amount: 15            ,
    terms:           "Net10"       ,
    publisher_id:    User.first.id ,
    expire_at:       Time.now + 5.days
  },
  {
    type:   "Contract::Forecast"   ,
    bug_id: Bug.first.id           ,
    currency_type:   "PokerBux"    ,
    currency_amount: 5             ,
    terms:           "Net30"       ,
    publisher_id:    User.first.id ,
    expire_at:       Time.now +  1.week
  }
]

opts.each do |opt|
  ContractPub.new(opt).save
end
