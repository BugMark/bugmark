# -*- mode: ruby -*-
# vi: set ft=ruby :

Rake::Task["deploy:migrating"].clear_actions
Rake::Task["deploy:migrating"].clear_comments
namespace :deploy do
  task :migrating do
    on roles(:all) do |host|
      # while the system is under development, recreate
      # the database and reload all data
      execute "[ -f /etc/systemd/system/bugmark.service ] && sudo systemctl stop bugmark"
      execute "cd #{release_path} && bundle exec script/data/all_production"
      execute "sudo systemctl start bugmark"
      # execute "cd #{release_path} && RAILS_ENV=production bundle exec rake db:migrate"
    end
  end
end
